<div class="contents-row">
  <h2 class="top">Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class ="field-cover">
      <div class="field">
        <%= f.label :nickname,class: "title" %> <em class = "title">(6 characters maximum)</em><br />
        <%= f.text_field :name, autofocus: true, maxlength: "6" ,class:"text-field"%>
      </div>

    
      <div class="field">
        <%= f.label :email,class: "title" %><br />
        <%= f.email_field :email,class:"text-field",placeholder: "yurie kawaii" %>
      </div>

      <div class="field">
        <%= f.label :password,class: "title" %>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" ,class:"text-field"%>
      </div>

      <div class="field">
        <%= f.label :password_confirmation ,class: "title"%><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" ,class:"text-field"%>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
